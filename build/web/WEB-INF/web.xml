<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>GenreServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.GenreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LabelServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.LabelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.ArtistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrackServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.TrackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistributorServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.DistributorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeliveryServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.DeliveryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.storage.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenreServlet</servlet-name>
        <url-pattern>/admin/genre</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EshopServlet</servlet-name>
        <servlet-class>ru.ifmo.eshop.servlets.EshopServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EshopServlet</servlet-name>
        <url-pattern>/eshop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LabelServlet</servlet-name>
        <url-pattern>/admin/label</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistServlet</servlet-name>
        <url-pattern>/admin/artist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/admin/item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrackServlet</servlet-name>
        <url-pattern>/admin/track</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistributorServlet</servlet-name>
        <url-pattern>/admin/distributor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeliveryServlet</servlet-name>
        <url-pattern>/admin/delivery</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ru.ifmo.eshop.servlets.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
